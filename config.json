{
    "$schema": "https://json.schemastore.org/webpack-config.json",
    "version": 1,
    "manager": {
        "dotenv": "./manager/.env",
        "plugins": {
            "directory": "./plugins",
            "interval": 2,
            "entry_point": "run"
        },
        "tasks": {
            "directory": "./backgroundtask",
            "default": "./manager/plTask.py",
            "auto_restart": true,
            "interval": 2,
            "max_retries": 3
        },
        "log": {
            "file": "manager.log",
            "console": false
        },
        "snapshot": {
            "extensions": [
                ".log",
                ".pyc",
                ".html",
                "*.lock",
                "*.toml",
                "*.json",
                "*.txt",
                "*.md"
            ],
            "filenames": [
                "__pycache__",
                "__init__.py",
                ".env",
                ".git",
                "poetry.lock",
                "pyproject.toml",
                "requirements.txt",
                "plugin.json",
                "README.md",
                "LICENSE",
                "LICENSE.txt",
                "CHANGELOG.md",
                "HISTORY.md",
                "CONTRIBUTING.md",
                "CODE_OF_CONDUCT.md"
            ],
            "hidden": true
        }
    },
    "secure": {
        "password": {
            "algorithms": [
                "bcrypt"
            ],
            "scheme": "bcrypt",
            "category": "password"
        },
        "dotenv": "./security/.env"
    },
    "migration": {
        "url": "sqlite:///test.db",
        "alembic_config": "alembic.ini",
        "auto_discover_models": true,
        "automigration": {
            "models": [
                "./data/models",
                "./manager/models"
            ]
        },
        "model_discovery": {
            "plugins_path": "plugins",
            "exclude_directories": [
                "__pycache__",
                ".git",
                "node_modules",
                "venv",
                ".pytest_cache"
            ],
            "include_file_patterns": [
                "*.py"
            ],
            "exclude_file_patterns": [
                "__init__.py",
                "test_*.py",
                "*_test.py"
            ]
        },
        "backup": {
            "auto_backup_before_migration": true,
            "backup_directory": "backups",
            "max_backup_files": 10,
            "backup_name_format": "backup_{timestamp}.db"
        },
        "logger": {
            "console": false,
            "file": "migration.log"
        }
    },
    "xcore": {
        "logs": {
            "console": false,
            "file": "app.log"
        },
        "extensions": [
            "auth",
            "data",
            "manager",
            "logger",
            "security",
            "tools",
            "xcore"
        ],
        "requirements": [
            "auth==1.0.0",
            "data==1.0.0",
            "manager==1.0.0",
            "logger==1.0.0",
            "security==1.0.0",
            "tools==1.0.0",
            "xcore==1.0.0"
        ]
    }
}